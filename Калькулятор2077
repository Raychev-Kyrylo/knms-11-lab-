while True:
    x = float(input('перша цифра'))
    y = float(input('друга цифра'))
    operation = input('дія:')

    result = None

    if operation == "+":
        result = x + y
    elif operation == "-":
        result = x - y
    elif operation == "*":
        result = x * y
    elif operation == "/":
        result = x / y
    else:
        print("Дія не підтримується,чекайте оновлення у 2027 році")

    if result is not None:
        print('Готово', result)
